{
  "name": "bluprnt-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "db:setup": "ts-node src/scripts/setup-db.ts",
    "db:test": "ts-node -e \"import('./src/db/index.js').then(db => db.testConnection())\"",
    "db:print": "ts-node src/scripts/print-db.ts"
  },
  "dependencies": {
    "@types/pg": "^8.15.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "4.19.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/node": "^22.7.5",
    "ts-node-dev": "2.0.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "express": "4.19.2",
    "@types/express": "4.17.21"
  }
}
